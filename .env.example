# ===========================================
# Justice Nexus Chain - Environment Variables
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:8080

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=mongodb://localhost:27017/justice_nexus_chain

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure_123456789
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
# Celo Sepolia Testnet RPC URL
CELO_SEPOLIA_RPC_URL=https://forno.celo-sepolia.celo-testnet.org

# Private key for blockchain transactions (without 0x prefix)
PRIVATE_KEY=your_private_key_here_64_characters_long_hex_string_example_1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Smart contract address (deployed contract)
CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# Blockchain test mode (true for development, false for production)
BLOCKCHAIN_TEST_MODE=true

# CeloScan API key for contract verification
CELOSCAN_API_KEY=your_celoscan_api_key_here

# ===========================================
# IPFS CONFIGURATION (Pinata)
# ===========================================
PINATA_API_Key=your_pinata_api_key_here
PINATA_API_Secret=your_pinata_secret_key_here

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================
# Gmail SMTP Configuration (if using real email service)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# SMTP Configuration (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# These are used by the frontend (Vite environment variables)
VITE_API_BASE_URL=http://localhost:3001
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs
VITE_API_URL=http://localhost:3001

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug logging
DEBUG=true

# OTP settings
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# File upload settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_SECRET=your_session_secret_here_make_it_long_and_secure

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# WebSocket settings
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:8080

# ===========================================
# BACKUP & MONITORING
# ===========================================
# Logging level
LOG_LEVEL=info

# Backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# PRODUCTION SETTINGS (uncomment for production)
# ===========================================
# NODE_ENV=production
# BLOCKCHAIN_TEST_MODE=false
# DEBUG=false
# LOG_LEVEL=warn
